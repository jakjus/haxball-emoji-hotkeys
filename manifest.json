{
  "name": "HaxBall Emoji Hotkeys",
  "version": "0.2.2",
  "manifest_version": 3,
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": { "16": "images/favicon.png" },
  "content_scripts": [
   {
     "matches": ["https://*.haxball.com/play*"],
     "js": ["content-script.js"]
   }
  ],
  "action": {
        "default_popup": "popup.html"
  }
}
